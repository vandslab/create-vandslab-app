# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration (PostgreSQL + TypeORM)
# Option 1: Individual credentials
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME={{PROJECT_NAME}}_db
DB_SSL=false  # Set to true for Prisma Cloud/production databases

# Option 2: Connection URL (overrides individual credentials if provided)
# DATABASE_URL=postgres://username:password@host:port/database?sslmode=require

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=604800  # 7 days in seconds

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
