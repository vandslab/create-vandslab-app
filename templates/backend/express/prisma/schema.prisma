generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model ActivityLog {
  id         String   @id @default(uuid())
  userId     String?  // Optional - anonymous/guest activity tracking
  action     String   // Action type: "LOGIN", "CREATE", "UPDATE", "DELETE", etc.
  resource   String?  // Resource type: "User", "Post", "Campaign", etc.
  resourceId String?  // ID of the affected resource
  ipAddress  String?  // Client IP address
  userAgent  String?  // Client User-Agent
  metadata   Json?    // Additional data: request body, changes, extra info
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("activity_logs")
}