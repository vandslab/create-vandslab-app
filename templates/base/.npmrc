# pnpm configuration
auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=false

# Performance
prefer-frozen-lockfile=true
engine-strict=true

# Security
audit-level=moderate

# Enable install scripts for native dependencies (required for bcrypt, sharp, prisma, etc.)
enable-scripts=true

# Enable workspace package injection for pnpm deploy (required for pnpm v10+)
inject-workspace-packages=true
