# Use flat node_modules structure without symlinks (like npm)
shamefully-hoist=true
node-linker=hoisted

# Dependencies
auto-install-peers=true
strict-peer-dependencies=false

# Performance
prefer-frozen-lockfile=true
engine-strict=true

# Security
audit-level=moderate
minimumReleaseAge=1440

# Enable install scripts for native dependencies (bcrypt, prisma, etc.)
enable-scripts=true
